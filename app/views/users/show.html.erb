<p id="notice"><%= notice %></p>

<%= current_user.id %>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Street address:</strong>
  <%= @user.street_address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>

<p>
  <strong>Unit:</strong>
  <% if @user.unit.present? %>
  <%= @user.unit %>
  <% else %>
  <%= link_to 'Create', new_unit_path %>
  <% end %>
</p>

<p>
  <strong>Team:</strong>
  <% if @user.team %>
  <% @team = @user.team %>
  <%= link_to @team.name, @team %>
  <% else %> 
  <% if @user.invitations.length > 0 %>
  <%= link_to 'Join a team!', invitation_user_path(@user) %>
  <% end %>
  <%= link_to 'Create a team!', new_team_path %>
  <% end %>
</p>

<%= link_to 'Edit', edit_current_user_path %> |
